{
  "name": "progimage",
  "version": "0.0.1",
  "description": "Programmatic image storage and processing service",
  "main": "src/handler.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "pretty": "prettier --write **/*.js",
    "lint": "eslint . --ext .js",
    "deploy:dev": "sls deploy",
    "deploy:prod": "sls deploy --stage prod"
  },
  "author": "antonio.terreno@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint": "^5.9.0",
    "husky": "^1.1.2",
    "jest": "^24.0.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "serverless-offline": "4.6.0",
    "serverless": "1.38.0",
    "serverless-plugin-create-deployment-bucket": "0.0.2"
  },
  "dependencies": {
    "aws-sdk": "^2.355.0",
    "debug": "^4.1.1",
    "filetype": "^0.1.0",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run pretty",
      "npm run lint",
      "npm run test",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aterreno/progimage.git"
  },
  "keywords": [
    "dynamodb",
    "aws",
    "client",
    "dynamo",
    "amazon"
  ],
  "bugs": {
    "url": "https://github.com/aterreno/progimage/issues"
  },
  "homepage": "https://github.com/aterreno/progimage#readme"
}
